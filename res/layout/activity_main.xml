<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <Button
        android:id="@+id/btn_infomation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="24dp"
        android:text="个人信息" />

    <Button
        android:id="@+id/btn_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_infomation"
        android:layout_alignBottom="@+id/btn_infomation"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@+id/btn_infomation"
        android:text="实习汇报" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_infomation"
        android:layout_below="@+id/btn_infomation"
        android:layout_marginTop="52dp"
        android:text="登录" />

</RelativeLayout>
